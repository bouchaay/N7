<?xml version="1.0" encoding="UTF-8"?>
<project default="Tables" name="fr.n7.idm.project.shemaTablesToJava">
    <property name="ECLIPSE_HOME" value="../../../../../../eclipse/java-2023-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="fr.n7.idm.project.shemaTablesToJava.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/fr.n7.idm.project.shemaTablesToJava/bin"/>
    </path>

    <path id="fr.n7.idm.project.shemaTablesToJava.classpath">
        <path refid="fr.n7.idm.project.shemaTablesToJava.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="fr.n7.idm.project.shemaTablesToJava.libraryclasspath.alljars">
        <pathelement location="../fr.n7.idm.project.shemaTablesToJava/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="fr.n7.idm.project.shemaTablesToJava.classpath.alljars">
        <path refid="fr.n7.idm.project.shemaTablesToJava.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="Tables">
        <java classname="fr.n7.idm.project.shemaTablesToJava.main.Tables" classpathref="fr.n7.idm.project.shemaTablesToJava.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="Tables.alljars">
        <java classname="fr.n7.idm.project.shemaTablesToJava.main.Tables" classpathref="fr.n7.idm.project.shemaTablesToJava.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
